
<div class="section-{{ section.id }}-padding sa-section-whychoose sa-bg-primary px-32 pb-32 -decal-top -dct-primary -decal-bottom -dcb-primary">
    <div class="page-width -section-content w-full">

        <div class="pl-20 pt-8 pb-24">

            <h2 class="!text-white">
                {{ section.settings.headline }}
            </h2>

            <div class="_subtitle sa-col-secondary">
                {{ section.settings.subheadline }}
            </div>

        </div>

        <div class="wc-entry-container">

            {%- for block in section.blocks -%}

                <div id="F2FEntry-{{ section.id }}-{{ forloop.index }}" class="wc-entry">
                    {% comment %}
                      ToDo: Optimize image sizes
                    {% endcomment %}
                    <div class="wc-left">
                        <div class="wc-image">
                            {%- if block.settings.image -%}

                            {%- liquid
                                assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round

                                assign sizes = '100vw'
                                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

                                assign fetch_priority = 'auto'
                                if section.index == 1
                                    assign fetch_priority = 'high'
                                endif
                            -%}

                            {%- if forloop.first %}
                                {{
                                block.settings.image
                                | image_url: width: 880
                                | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                                }}
                            {%- else -%}
                                {{
                                block.settings.image
                                | image_url: width: 880
                                | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                                }}
                            {%- endif -%}

                        {%- else -%}
                            {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                            {%- if placeholder_slide == 1 -%}
                                {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                            {%- else -%}
                                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                            {%- endif -%}
                        {%- endif -%}
                        </div>
                    </div>

                    <div class="wc-right">

                        <div class="wc-text">

                            <h3 class="!text-white _subtitle !leading-none mb-2 !font-bold ">{{ block.settings.heading | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}</h3>

                            <div class="_subtitle-small sa-col-secondary">
                                {{ block.settings.subheading | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}
                            </div>

                        </div>

                    </div>

                </div>

            {% endfor %}

        </div>

    </div>
</div>

{% javascript %}
{% endjavascript %}

{% stylesheet %}
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.le_whychoose.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "template_type",
      "label": "Template",
      "options": [
        {
          "value": "blue",
          "label": "Dark Blue 2 col"
        },
        {
          "value": "light1",
          "label": "Light Blue 3 col"
        },
        {
          "value": "light2",
          "label": "Light Blue 3 col + Link"
        }
      ]
    },
    {
      "type": "text",
      "id": "headline",
      "default": "t:sections.slideshow.blocks.slide.name",
      "label": "t:sections.slideshow.blocks.slide.name"
    },
    {
      "type": "inline_richtext",
      "id": "subheadline",
      "default": "t:sections.slideshow.blocks.slide.name",
      "label": "t:sections.slideshow.blocks.slide.name"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Entry",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        },
        {
          "type": "header",
          "content": "t:sections.slideshow.blocks.slide.settings.header_text.content"
        },
        {
          "type": "richtext",
          "id": "heading",
          "default": "t:sections.slideshow.blocks.slide.settings.heading.default",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label"
        },
        {
          "type": "richtext",
          "id": "subheading",
          "visible_if": "{{ section.settings.slider_type != 'light2' }}",
          "default": "t:sections.slideshow.blocks.slide.settings.subheading.default",
          "label": "t:sections.slideshow.blocks.slide.settings.subheading.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "visible_if": "{{ section.settings.slider_type == 'light2' }}",
          "label": "Button: Label"
        },
        {
          "type": "url",
          "id": "button_url",
          "visible_if": "{{ section.settings.slider_type == 'light2' }}",
          "label": "Button: URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.le_whychoose.presets.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

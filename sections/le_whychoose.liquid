{%- liquid

    # ---------------------------------
    # DECALS
    # ---------------------------------
    assign decal_top = false
    assign decal_bottom = false
    assign section_classes = ''

    if section.settings.decal_top
        assign decal_top = true
        assign section_classes = section_classes | append: ' -decal-top '
    endif

    if section.settings.decal_bottom
        assign decal_bottom = true
        assign section_classes = section_classes | append: ' -decal-bottom '
    endif

    # ---------------------------------
    # BACKGROUND + DECAL - colors
    # ---------------------------------
    assign section_classes = section_classes | append: ' sa-bg-' | append: section.settings.section_bkgr
    assign section_classes = section_classes | append: ' -dct-' | append: section.settings.section_bkgr
    assign section_classes = section_classes | append: ' -dcb-' | append: section.settings.section_bkgr
    if section.settings.section_bkgr == 'primary'
        assign section_classes = section_classes | append: ' sa-col-white'
    endif
    if section.settings.section_bkgr == 'light-blue' or section.settings.section_bkgr == 'white'
        assign section_classes = section_classes | append: ' sa-col-primary'
    endif

    # ---------------------------------
    # CUSTOM CLASSES
    # ---------------------------------
    assign section_classes = section_classes | append: section.settings.custom_class_names


    # ---------------------------------
    # ---------------------------------
    assign iz_twocol = false
    assign iz_threecol = false
    assign iz_threecol-notext = false
    assign iz_threecol-compact = false

    if section.settings.template_type == 'twocol'
        assign iz_twocol = true
    endif

    if section.settings.template_type == 'threecol'
        assign iz_threecol = true
    endif

    if section.settings.template_type == 'threecol-notext'
        assign iz_threecol-notext = true
    endif

    if section.settings.template_type == 'threecol-compact'
        assign iz_threecol-compact = true
    endif

%}

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .section-{{ section.id }}-margin {
        margin-top: {% if decal_top %}{{ section.settings.margin_top | plus: 140 | times: 0.75 | round: 0 }}{% else %}{{ section.settings.margin_top }}{% endif %}px !important;
        margin-bottom: {% if decal_bottom %}{{ section.settings.margin_bottom | plus: 140 | times: 0.75 | round: 0 }}{% else %}{{ section.settings.margin_bottom }}{% endif %}px !important;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
        .section-{{ section.id }}-margin {
            margin-top: {% if decal_top %}{{ section.settings.margin_top | plus: 140 }}{% else %}{{ section.settings.margin_top }}{% endif %}px !important;
            margin-bottom: {% if decal_bottom %}{{ section.settings.margin_bottom | plus: 140 }}{% else %}{{ section.settings.margin_bottom }}{% endif %}px !important;
        }
    }
{%- endstyle -%}

<div class="sa-section-whychoose
            -template-{{ section.settings.template_type }}
             section-{{ section.id }}-padding section-{{ section.id }}-margin
             {{ section_classes }}">
    <div class="page-width -section-content w-full">

        <div class="wc-header pl-20 pb-{% if iz_twocol %}24{% else %}16{% endif %}">

            {% if section.settings.headline %}
            <div class="wc-heading">
                <{{ section.settings.heading_type }} class=" {% if section.settings.no_decal %} -no-decal {% endif %} -h-text-{{ section.settings.heading_size }}">
                    {{ section.settings.headline | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}
                </{{ section.settings.heading_type }}>
            </div>
            {% endif %}

            <div class="_subtitle">
                {{ section.settings.subheadline }}
            </div>

        </div>

        <div class="wc-entry-container">

            {%- for block in section.blocks -%}

                <div id="F2FEntry-{{ section.id }}-{{ forloop.index }}" class="wc-entry">
                    {% comment %}
                      ToDo: Optimize image sizes
                    {% endcomment %}
                    <div class="wc-left">
                        <div class="wc-image">

                            {%- if block.settings.image -%}

                            {%- liquid

                                assign img_extension = block.settings.image | split: '.' | last | downcase
                                assign iz_svg = false
                                if img_extension == 'svg'
                                    assign iz_svg = true
                                endif

                                assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round

                                assign sizes = '100vw'
                                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

                                assign fetch_priority = 'auto'
                                if section.index == 1
                                    assign fetch_priority = 'high'
                                endif

                            -%}

                            {%- if iz_svg %}
                                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}">
                            {%- else -%}
                                {%- if forloop.first %}
                                    {{
                                    block.settings.image
                                    | image_url: width: 880
                                    | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                                    }}
                                {%- else -%}
                                    {{
                                    block.settings.image
                                    | image_url: width: 880
                                    | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                                    }}
                                {%- endif -%}
                            {%- endif -%}

                        {%- else -%}
                            {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                            {%- if placeholder_slide == 1 -%}
                                {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                            {%- else -%}
                                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                            {%- endif -%}
                        {%- endif -%}

                        </div>
                    </div>

                    <div class="wc-right">

                        {% if block.settings.heading != blank or block.settings.subheading != blank %}
                        <div class="wc-text">

                            <h3 class="_subtitle !leading-none mb-2 ">{{ block.settings.heading | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}</h3>

                            {%- if block.settings.subheading != blank -%}
                            <div class="_subtitle-small">
                                {{ block.settings.subheading }}
                            </div>
                            {%- endif -%}

                        </div>
                        {%- endif -%}

                        {%- if section.settings.button_url != blank -%}
                            <div class="sa-button-container flex">
                                <a href="{{ section.settings.button_url }}" class="sa-button -medium mt-32 !mx-auto -hover-grow">
                                    <span>{{ section.settings.button_label }}</span>
                                </a>
                            </div>
                        {% endif %}

                    </div>

                </div>

            {% endfor %}

        </div>

        {%- if section.settings.button_url != blank -%}
            <div class="sa-button-container flex">
                <a href="{{ section.settings.button_url }}" class="sa-button -medium mt-32 !mx-auto -hover-grow">
                    <span>{{ section.settings.button_label }}</span>
                </a>
            </div>
        {% endif %}

    </div>
</div>

{% javascript %}
{% endjavascript %}


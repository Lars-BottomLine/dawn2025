{{ 'le_swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'le_swiper-bundle.min.js' | asset_url | script_tag }}

{%- liquid

    assign button_open_tag = ''
    assign button_close_tag = ''
    assign subheading_open_tag = ''
    assign subheading_close_tag = ''

    assign iz_hero = false
    if section.settings.slider_type == 'hero'
        assign iz_hero = true
        assign button_open_tag = '<h1 class="sa-title _text-h1 sa-flex-justify-end">'
        assign button_close_tag = '</h1>'
        assign subheading_open_tag = '<div class="_subheading sa-flex-justify-end">'
        assign subheading_close_tag = '</div>'
    endif

    assign iz_jobcard = false
    if section.settings.slider_type == 'job-card'
        assign iz_jobcard = true
        assign subheading_open_tag = '<div class="_subtitle-small">'
        assign subheading_close_tag = '</div>'
    endif

    assign iz_testimonial = false
    if section.settings.slider_type == 'testimonial'
        assign iz_testimonial = true
        assign subheading_open_tag = '<div class="_subtitle-medium sa-col-secondary">'
        assign subheading_close_tag = '</div>'
    endif

    if iz_jobcard or iz_testimonial
        assign button_open_tag = '<h3 class="!font-bold _subtitle !text-white">'
        assign button_close_tag = '</h3>'
    endif

   # DECALS
    # ---------------------------------
    assign decal_top = false
    assign decal_bottom = false
    assign section_classes = ''

    if section.settings.decal_top
        assign decal_top = true
        assign section_classes = section_classes | append: ' -decal-top '
    endif

    if section.settings.decal_bottom
        assign decal_bottom = true
        assign section_classes = section_classes | append: ' -decal-bottom '
    endif
    # ---------------------------------

%}


{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .section-{{ section.id }}-margin {
        margin-top: {% if decal_top %}{{ section.settings.margin_top | times: 0.75 | round: 0 | plus: 105 }}{% else %}{{ section.settings.margin_top | times: 0.75 | round: 0 }}{% endif %}px;
        margin-bottom: {% if decal_bottom %}{{ section.settings.margin_bottom | times: 0.75 | round: 0 | plus: 105 }}{% else %}{{ section.settings.margin_bottom | times: 0.75 | round: 0 }}{% endif %}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
        .section-{{ section.id }}-margin {
            margin-top: {% if decal_top %}{{ section.settings.margin_top | plus: 140 }}{% else %}{{ section.settings.margin_top }}{% endif %}px;
            margin-bottom: {% if decal_bottom %}{{ section.settings.margin_bottom | plus: 140 }}{% else %}{{ section.settings.margin_bottom }}{% endif %}px;
        }
    }
{%- endstyle -%}

<div class="sa-section-swiper
            {% if iz_jobcard or iz_testimonial %} -dct-light-blue -dcb-light-blue sa-bg-light-blue {% endif %}
            section-{{ section.id }}-padding section-{{ section.id }}-margin
            {{ section_classes }}">
    <div class="sa-swiper-wrapper page-width">

        {% if  section.settings.headline and section.settings.headline != '' %}
        <h2 class="-no-indent !mb-16 mb-16">
            {{ section.settings.headline }}
        </h2>
        {% endif %}

        <div id="swiper-{{ section.id }}" class="swiper sa-swiper sa-swiper-type-{{ section.settings.slider_type }}">
            <div class="swiper-wrapper">

                {%- for block in section.blocks -%}

                    <div id="Slide-{{ section.id }}-{{ forloop.index }}"
                         class="swiper-slide media"
                         role="group"
                         aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
                         aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                         tabindex="-1" >

                        {% if iz_hero %}{% else %}<div class="sa-swiper-inside">{% endif %}

                            <div class="slideshow__media banner__media media">
                                {%- if block.settings.image -%}

                                    {%- liquid
                                        assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round

                                        assign sizes = '100vw'
                                        assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

                                        assign fetch_priority = 'auto'
                                        if section.index == 1
                                            assign fetch_priority = 'high'
                                        endif
                                    -%}
                                    {%- if forloop.first %}
                                        {{
                                        block.settings.image
                                        | image_url: width: 3840
                                        | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                                        }}
                                    {%- else -%}
                                        {{
                                        block.settings.image
                                        | image_url: width: 3840
                                        | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                                        }}
                                    {%- endif -%}
                                {%- else -%}
                                    {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                                    {%- if placeholder_slide == 1 -%}
                                        {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                    {%- else -%}
                                        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                                    {%- endif -%}
                                {%- endif -%}
                            </div>

                            <div class="sa-swiper-content">
                                <div class="sa-row">

                                    <div class="">
                                        {{ button_open_tag }}
                                            {{ block.settings.heading | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}
                                        {{ button_close_tag }}
                                    </div>

                                    {{ subheading_open_tag }}
                                        {{ block.settings.subheading | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}
                                    {{ subheading_close_tag }}

                                    {% if iz_testimonial %}
                                    <div class="_subtitle-small">
                                        {{ block.settings.text_content | remove: "<p>" | replace: '</p>', '<br>' | remove_last: '<br>' }}
                                    </div>
                                    {% endif %}


                                </div>

                                {% if iz_testimonial == false and block.settings.button_label != blank %}
                                <div class="sa-row">
                                    <div class="sa-blank-div">&nbsp;</div>
                                    <a href="#" class="{% if iz_hero %} sa-button {% else %} sa-swiper-button {% endif %} -hover-grow -medium">
                                        <span class="_button-text leading-none">
                                            {{ block.settings.button_label }}
                                        </span>
                                        {% if iz_jobcard %}
                                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="31" viewBox="0 0 30 31" fill="none" class="sa-button-icon">
                                            <path d="M22.9873 17.2073H0.666504V13.5406H22.9873L12.7207 3.27394L15.3332 0.707275L29.9998 15.3739L15.3332 30.0406L12.7207 27.4739L22.9873 17.2073Z" fill="#39EAF6"/>
                                        </svg>
                                        {% endif %}
                                    </a>
                                </div>
                                {% endif %}

                            </div>

                        {% if iz_hero %}{% else %}</div>{% endif %}

                    </div>

                {% endfor %}

            </div>

            <div class="swiper-pagination"></div>

            {% # BUTTONS
               # ---------------------- %}
            <div class="swiper-button-wrapper">
                <div class="sa-swiper-button-prev sa-button -hover-translate">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
                          <path d="M7.179 16.5L17.4457 26.7667L14.8332 29.3333L0.166504 14.6667L14.8332 0L17.4457 2.56667L7.179 12.8333H29.4998V16.5H7.179Z" fill="white"/>
                        </svg>
                    </span>
                </div>
                <div class="sa-swiper-button-next sa-button -hover-translate">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
                          <path d="M22.8208 16.5H0.5V12.8333H22.8208L12.5542 2.56667L15.1667 0L29.8333 14.6667L15.1667 29.3333L12.5542 26.7667L22.8208 16.5Z" fill="white"/>
                        </svg>
                    </span>
                </div>
            </div>

        </div>

        <script>
            // TODO: differentiate between autorotate and autoplay
            var swiper = new Swiper("#swiper-{{ section.id }}", {
                spaceBetween: 0,

                navigation: {
                    nextEl: ".sa-swiper-button-next",
                    prevEl: ".sa-swiper-button-prev",
                },

                loop: true,

                speed: 1000,

                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },

                {%- if section.settings.auto_rotate -%}
                autoplay: {
                  delay: {{ section.settings.change_slides_speed }}000,
                  disableOnInteraction: false,
                },
                {% else %}
                autoplay: false,
                {% endif %}

                {% if iz_hero %}
                effect: "fade",
                {% endif %}

                {% if iz_jobcard or iz_testimonial %}
                slidesPerView: 1,

                breakpoints: {
                    530: {
                        slidesPerView: 2
                    },
                    // when window width is >= 640px
                    900: {
                        slidesPerView: 3
                    }
                }
                {% endif %}

            });

        </script>

    </div>
</div>

{% javascript %}
{% endjavascript %}


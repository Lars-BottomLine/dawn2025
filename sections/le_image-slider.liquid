{{ 'le_swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'le_swiper-bundle.min.js' | asset_url | script_tag }}


<div class="section-{{ section.id }}-padding sa-section-image-slider">
    <div class="sa-slider-wrapper page-width">

        <div id="swiper-{{ section.id }}" class="swiper sa-slider">
            <div class="swiper-wrapper">

                {%- for block in section.blocks -%}

                    <div id="Slide-{{ section.id }}-{{ forloop.index }}"
                         class="swiper-slide medi"
                         role="group"
                         aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
                         aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                         tabindex="-1" >

                        <div class="slideshow__mdia baner__media mda">
                            {%- if block.settings.image -%}

                                {%- liquid
                                    assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round

                                    assign sizes = '100vw'
                                    assign widths = '375, 550, 750'

                                    assign fetch_priority = 'auto'
                                    if section.index == 1
                                        assign fetch_priority = 'high'
                                    endif
                                -%}
                                {%- if forloop.first %}
                                    {{
                                    block.settings.image
                                    | image_url: width: 800
                                    | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                                    }}
                                {%- else -%}
                                    {{
                                    block.settings.image
                                    | image_url: width: 800
                                    | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                                    }}
                                {%- endif -%}
                            {%- else -%}
                                {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                                {%- if placeholder_slide == 1 -%}
                                    {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                {%- else -%}
                                    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                                {%- endif -%}
                            {%- endif -%}
                        </div>

                    </div>

                {% endfor %}

            </div>

        </div>

        <script>
            var swiper = new Swiper("#swiper-{{ section.id }}", {
                speed: 10000,
                direction: "horizontal",
                loop: true,
                slidesPerView: 3,
                freeMode: true,
                zoom: false,
                keyboard: true,
                pagination: false,
                navigation: false,
                spaceBetween: 50,

                autoplay: {
                    delay: 0
                },

                breakpoints: {
                    765: {
                        slidesPerView: 1
                    },
                    1000: {
                        slidesPerView: 3
                    },
                    1200: {
                        slidesPerView: 4
                    }
                },


            });

        </script>

    </div>
</div>


{% schema %}
{
  "name": "t:sections.le_image-slider.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Image",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.le_image-slider.presets.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
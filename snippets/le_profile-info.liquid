{% comment %}
  Renders an entry for the face2face section

  Accepts:
  - pi_type: { string }
  - pi_title: { string }
  - pi_text: { string }
  - pi_image: { image }
  - pi_link_title: { string }
  - pi_link_url: { string

  Usage:
  {% render 'le_key-benefit', pi_type: "Hello", kb_text: "This is interesting', kb_image: kb_icon, kb_id: 'uaoue' %}
{% endcomment %}

{%- case pi_type -%}

    {% # BLOCK: TITLE %}
    {%- when 'title' or 'text' or 'title_text' -%}
        {% if pi_title != blank %}
            <div class="pro-title">
                {% if pi_title.type != blank %}
                    {{ pi_title | metafield_tag }}
                {% else %}
                    {{ pi_title }}
                {% endif %}
            </div>
        {% endif %}

        {% if pi_text != blank %}
            <div class="pro-text">
                {% if pi_text.type != blank %}
                    {{ pi_text | metafield_tag }}
                {% else %}
                    {{ pi_text }}
                {% endif %}
            </div>
        {% endif %}

        {% # BLOCK: SOCIAL %}
    {%- when 'social' -%}
        {% if pi_link_title != blank %}
            <div class="pro-social flex flex-column justify-start items-center gap-4">
                {% if pi_image != blank %}
                    <div class="pro-social-image">
                        {{ pi_image | media_tag }}
                    </div>
                {% endif %}
                {% if pi_link_url != blank %}
                    <a href="{{ pi_link_url }}" target="_blank">
                        {{ pi_link_title }}
                    </a>
                {% else %}
                    <span>
                        {{ pi_link_title }}
                    </span>
                {% endif %}
            </div>
        {% endif %}

{% endcase %}